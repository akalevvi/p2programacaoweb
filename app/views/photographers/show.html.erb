    <img src=<%= "#{@photographer.avatar}"%> width=150px height=100px > </img>

    <h1><%= @photographer.display_name %></h1>

    <p><%= @photographer.bio %></p>

    <p>Portfolio: <%= @photographer.portfolio_link %></p>

